{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-shipping" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form id="form-shipping" action="{{ save }}" method="post" data-oc-toggle="ajax">

          {# tabs start #}
          <ul class="nav nav-tabs">
            <li class="nav-item"><a href="#tab-econt-api-settings" data-bs-toggle="tab" class="nav-link active">{{ tab_econt }}</a></li>
            <li class="nav-item"><a href="#tab-settings" data-bs-toggle="tab" class="nav-link">{{ tab_settings }}</a></li>
          </ul>
          {# tabs end #}

          {# tabs content start #}
          <div class="tab-content">

            {# tab econt api settings start #}
            <div class="tab-pane active" id="tab-econt-api-settings">

              <div class="row mb-3">
                <label for="input-env-mode" class="col-sm-2 col-form-label">{{ entry_env_mode }}</label>
                <div class="col-sm-10">
                  <select name="shipping_pharmacy_econt_env_mode" id="input-env-mode" class="form-select">
                    <option value="{{ shipping_pharmacy_econt_env_test }}"{% if shipping_pharmacy_econt_env_mode == shipping_pharmacy_econt_env_test %} selected{% endif %}>{{ entry_test }}</option>
                    <option value="{{ shipping_pharmacy_econt_env_prod }}"{% if shipping_pharmacy_econt_env_mode == shipping_pharmacy_econt_env_prod %} selected{% endif %}>{{ entry_production }}</option>
                  </select>
                </div>
              </div>

              <div class="row mb-3">
                <label for="input-env-test" class="col-sm-2 col-form-label">{{ entry_env_test }}</label>
                <div class="col-sm-10">
                  <input type="text" name="shipping_pharmacy_econt_env_test" value="{{ shipping_pharmacy_econt_env_test }}" placeholder="{{ entry_env_test }}" id="input-env-test" class="form-control" />
                </div>
              </div>

              <div class="row mb-3">
                <label for="input-env-prod" class="col-sm-2 col-form-label">{{ entry_env_prod }}</label>
                <div class="col-sm-10">
                  <input type="text" name="shipping_pharmacy_econt_env_prod" value="{{ shipping_pharmacy_econt_env_prod }}" placeholder="{{ entry_env_prod }}" id="input-env-prod" class="form-control" />
                </div>
              </div>

              <div class="row mb-3">
                <label for="input-connection-code" class="col-sm-2 col-form-label">{{ entry_connection_code }}</label>
                <div class="col-sm-10">
                  <input type="text" name="shipping_pharmacy_econt_connection_code" value="{{ shipping_pharmacy_econt_connection_code }}" placeholder="{{ entry_connection_code }}" id="input-connection-code" class="form-control" />
                </div>
              </div>

              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <div class="form-check form-switch form-switch-lg">
                    <input type="hidden" name="shipping_pharmacy_econt_status" value="0"/>
                    <input type="checkbox" name="shipping_pharmacy_econt_status" value="1" id="input-status" class="form-check-input"{% if shipping_pharmacy_econt_status %} checked{% endif %}/>
                  </div>
                </div>
              </div>

              <div class="row mb-3">
                <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="shipping_pharmacy_econt_sort_order" value="{{ shipping_pharmacy_econt_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
                </div>
              </div>

            </div>
            {# tab econt api settings end #}

            {# tab settings start #}
            <div class="tab-pane" id="tab-settings">

              <div class="row mb-3">
                <label for="input-rate-econt-address" class="col-sm-2 col-form-label">{{ entry_rate_address }}</label>
                <div class="col-sm-10">
                  <textarea name="shipping_pharmacy_econt_rate_address" rows="5" placeholder="{{ entry_rate_address }}" id="input-rate-econt-address" class="form-control">{{ shipping_pharmacy_econt_rate_address }}</textarea>
                  <div class="form-text text-muted">{{ help_rate_1 }}</div>
                  <div class="form-text text-danger">{{ help_rate_2 }}</div>
                </div>
              </div>

              <div class="row mb-3">
                <label for="input-rate-econt-office" class="col-sm-2 col-form-label">{{ entry_rate_office }}</label>
                <div class="col-sm-10">
                  <textarea name="shipping_pharmacy_econt_rate_office" rows="5" placeholder="{{ entry_rate_office }}" id="input-rate-econt-office" class="form-control">{{ shipping_pharmacy_econt_rate_office }}</textarea>
                  <div class="form-text text-muted">{{ help_rate_1 }}</div>
                  <div class="form-text text-danger">{{ help_rate_2 }}</div>
                </div>
              </div>

              <div class="row mb-3">
                <label for="input-tax-class" class="col-sm-2 col-form-label">{{ entry_tax_class }}</label>
                <div class="col-sm-10">
                  <select name="shipping_pharmacy_econt_tax_class_id" id="input-tax-class" class="form-select">
                    <option value="0">{{ text_none }}</option>
                    {% for tax_class in tax_classes %}
                      <option value="{{ tax_class.tax_class_id }}"{% if tax_class.tax_class_id == shipping_pharmacy_econt_tax_class_id %} selected{% endif %}>{{ tax_class.title }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="row mb-3">
                <label for="input-geo-zone" class="col-sm-2 col-form-label">{{ entry_geo_zone }}</label>
                <div class="col-sm-10">
                  <select name="shipping_pharmacy_econt_geo_zone_id" id="input-geo-zone" class="form-select">
                    <option value="0">{{ text_all_zones }}</option>
                    {% for geo_zone in geo_zones %}
                      <option value="{{ geo_zone.geo_zone_id }}"{% if geo_zone.geo_zone_id == shipping_pharmacy_econt_geo_zone_id %} selected{% endif %}>{{ geo_zone.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>

            </div>
            {# tab settings end #}

          </div>
          {# tabs content end #}

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
