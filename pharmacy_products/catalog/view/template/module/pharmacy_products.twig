<div class="block-title mb-5">
    <span class="h3 noto-sans regular">{{ heading_title }}</span>
</div>

<nav id="nav-module-pharmacy-products" class="mb-3 mb-md-5">
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <button class="nav-link active" id="nav-featured-tab" data-bs-toggle="tab" data-bs-target="#nav-featured" 
        type="button" role="tab" aria-controls="nav-featured" aria-selected="true">
        <span>{{ tab_featured }}</span>
    </button>
    <button class="nav-link" id="nav-topseller-tab" data-bs-toggle="tab" data-bs-target="#nav-topseller" 
        type="button" role="tab" aria-controls="nav-topseller" aria-selected="false">
        <span>{{ tab_topseller }}</span>
    </button>
    <button class="nav-link" id="nav-most-searched-tab" data-bs-toggle="tab" data-bs-target="#nav-most-searched" 
        type="button" role="tab" aria-controls="nav-most-searched" aria-selected="false">
        <span>{{ tab_most_searched }}</span>
    </button>
  </div>
</nav>


<div class="tab-content" id="nav-tabContent">

    <div class="tab-pane fade show active" id="nav-featured" role="tabpanel" aria-labelledby="nav-featured-tab" tabindex="0">  

        {% if featured.axis == 'vertical' %}

            <!-- Swiper -->
            <div class="swiper-control-buttons">
                <div class="popular-products-swiper-btn-prev swiper-btn-prev"><i class="fas fa-chevron-left"></i></div>
                <div class="popular-products-swiper-btn-next swiper-btn-next"><i class="fas fa-chevron-right"></i></div>
            </div>
            <div class="swiper pharmacy-featured-products">
                <div class="swiper-wrapper">
                    {% for product in featured.products %}
                    <div class="swiper-slide">{{ product }}</div>
                    {% endfor %}
                </div>
            </div>
            <div class="popular-products-swiper-pagination swiper-pagination"></div>

            <!-- Initialize Swiper -->
            <script>
                window.addEventListener("load", function(event) {
                    var featured_products_swiper = new Swiper(".pharmacy-featured-products", {
                        slidesPerView: 5,
                        spaceBetween: 30,
                        pagination: {
                            el: ".popular-products-swiper-pagination",
                            clickable: true,
                        },
                        navigation: {
                            nextEl: ".popular-products-swiper-btn-next",
                            prevEl: ".popular-products-swiper-btn-prev",
                        },
                        breakpoints: {
                            200: {
                                slidesPerView: 2,
                                spaceBetween: 10,
                            },
                            600: {
                                slidesPerView: 3,
                                spaceBetween: 10,
                            },
                            768: {
                                slidesPerView: 4,
                                spaceBetween: 15,
                            },
                            1024: {
                                slidesPerView: 5,
                                spaceBetween: 15,
                            },
                            1200: {
                                slidesPerView: 6,
                                spaceBetween: 20,
                            },
                        },
                    });
                });
            </script>

        {% else %}
            <div class="row">
            {% for product in featured.products %}
                <div class='col-12'>
                    {{ product }}
                </div>
            {% endfor %}
            </div>
        {% endif %}

    </div>
    <div class="tab-pane fade" id="nav-topseller" role="tabpanel" aria-labelledby="nav-topseller-tab" tabindex="0">
        {{ topseller.info }}
    </div>
    <div class="tab-pane fade" id="nav-most-searched" role="tabpanel" aria-labelledby="nav-most-searched-tab" tabindex="0">
        {{ most_searched.info }}
    </div>

</div>
