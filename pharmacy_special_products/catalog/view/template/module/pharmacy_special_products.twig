<div class="block-title mb-5">
    <span class="h3 noto-sans regular">{{ heading_title }}</span>
</div>

<div class="row special-products">
    {% for product in special.products %}
    <div class='mb-3 mb-md-4 {% if special.axis == "vertical" %} col-6 col-md-4 col-lg-3{% else %} col-12{% endif %}'>{{ product }}</div>
    {% endfor %}
</div>

<div class="d-flex justify-content-center">
    <a href="{{ link_special_products }}" class="mt-3 mt-md-4 all-special-products"><span>{{ text_all_special_products }}</span></a>
</div>
